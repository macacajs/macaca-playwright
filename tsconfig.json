{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "inlineSourceMap":true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "pretty": true,
    "declaration": true,
    "removeComments": false,
    "types": [ "node" ],
    "outDir": "./dist/lib"
  },
  "include": [
    "lib"
  ]
}
